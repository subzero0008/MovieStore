@using MovieStoreMvc.Models.Domain
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<ApplicationUser>

<h1>User List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var roles = await ViewBag.UserManager.GetRolesAsync(user);
            if (!roles.Contains("Admin"))
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-default">Edit</a>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display:inline;">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
