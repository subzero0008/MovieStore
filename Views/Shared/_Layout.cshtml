<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Movie Store</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="/images/movie_filter_FILL0_wght400_GRAD0_opsz48.svg">
</head>
<body>
    @* Навигация *@
    @{
        string username = User.Identity.IsAuthenticated ? User.Identity.Name : string.Empty;
    }
    <nav class="nav-bar">
        <div class="logo">
            <a href="/Home/Index">Movie Store</a>
        </div>
        <ul class="nav-link">
            <li><a class="active" href="/Home/Index">Home</a></li>
            <li><a href="/Home/About">About</a></li>

            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                    {
                        <a href="#">Admin <i class="fa fa-caret-down"></i></a>
                        <ul class="dropdown-nav-link">
                            <li><a href="/Genre/Add">Genre</a></li>
                            <li><a href="/Movie/Add">Movie</a></li>
                            <li><a href="/UserManagement/Index">User Management</a></li>
                            <li><a href="/UserAuthentication/Logout">Logout</a></li>
                        </ul>
                    }
                    else
                    {
                        <a href="/UserAuthentication/Logout">Logout</a>
                    }
                </li>
                <li>
                    <a href="/UserManagement/EditProfile">Edit Profile</a>
                </li>
            }
            else
            {
                <li><a href="/UserAuthentication/Login">Login</a></li>
                <li><a href="/UserAuthentication/Register">Register</a></li>
            }
        </ul>
    </nav>

    @* Основно съдържание *@
    <main class="container">
        @RenderBody()
    </main>

    @* Footer *@
    <footer>
        &#169; @DateTime.Now.Year Movie Store
    </footer>

    @* Допълнителни секции за скриптове, ако са необходими *@
    @RenderSection("Scripts", required: false)
</body>
</html>
